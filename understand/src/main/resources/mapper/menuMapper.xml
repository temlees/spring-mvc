<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ohgiraffers.understand.model.MenuDAO">
<resultMap id="menuResult" type="com.ohgiraffers.understand.dto.MenuDTO">
    <id property="code" column="MENU_CODE"/>
    <result property="name" column="MENU_NAME"/>
    <result property="price" column="MENU_PRICE"/>
    <result property="categoryCode" column="CATEGORY_CODE"/>
    <result property="status" column="ORDERABLE_STATUS"/>
</resultMap>

    <select id="selectAllMenu" resultMap="menuResult">
        SELECT *
        FROM TBL_MENU
        WHERE ORDERABLE_STATUS ='Y'
    </select>

    <select id="selectOneMenu"  resultMap="menuResult">
        SELECT *
        FROM TBL_MENU
        WHERE ORDERABLE_STATUS ='Y' AND  MENU_CODE = #{code}
    </select>

    <insert id="regist" >
        INSERT INTO TBL_MENU(
        MENU_NAME,MENU_PRICE,CATEGORY_CODE,ORDERABLE_STATUS
        )VALUES(
        #{name},
        #{price},
        #{categoryCode},
        'Y'
        )
    </insert>

<!--    <update id="updateMenu">-->
<!--        UPDATE TBL_MENU-->
<!--        SET MENU_NAME= #{name} , MENU_PRICE = #{price}, CATEGORY_CODE = #{categoryCode}-->
<!--        WHERE MENU_CODE = #{code}-->
<!--    </update>-->


        <update id="updateMenu">
            UPDATE TBL_MENU
            <trim prefix="SET" prefixOverrides=",">
                <if test="name != null and name != ''">
                    MENU_NAME= #{name}
                </if>
                <if test="price != 0 and  price != null ">
                   , MENU_PRICE = #{price}
                </if>
                <if test="categoryCode != null and categoryCode != 0">
                   , CATEGORY_CODE = #{categoryCode}
                </if>
            </trim>
            WHERE MENU_CODE = #{code}
        </update>

    <delete id="delete">
        DELETE FROM TBL_MENU
        WHERE MENU_CODE = #{code}
    </delete>
</mapper>